@using System.Data
@{
    ViewData["Title"] = "Home Page";
}

<style type="text/css">
    .table-responsive {
        max-height: 207px;
        overflow: auto;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@ViewBag.method1
<br />
@ViewBag.method2
<br />
@ViewBag.method3
<br />
@if (ViewBag.Environment != null)
{
    foreach (var d in (Dictionary<string, string>)ViewBag.Environment)
    {
        <p>@d.Key : @d.Value</p>
    }
}

<environment include="Staging,Production">
    <p>This include Staging &amp; Production Environment</p>
</environment>

<environment exclude="Production">
    <p>This exclude Production Environment</p>
</environment>

@if (ViewBag.Data != null)
{
    DataSet ds = ViewBag.Data;

    if (ds != null && ds.Tables.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped compact table-hover nowrap mb-0" width="100%">
                <thead>
                    <tr class="table-primary">
                        @foreach (DataColumn col in ds.Tables[0].Columns)
                        {
                            <th>@col.ColumnName</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in ds.Tables[0].Rows)
                    {
                        <tr>
                            @foreach (DataColumn col in ds.Tables[0].Columns)
                            {
                                <td>@row[col.ColumnName]</td>
                            }

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

